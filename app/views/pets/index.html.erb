<div class="container mt-3">
  <h1 class="text-center">🐇🐢🐉🐍🐈🐕 Pets found 🐕🐈🐍🐉🐢🐇</h1>
  <%= link_to "Add a lost pet", new_pet_path, class: "btn btn-success" %>
  <div class="cards">
    <% @pets.each do |pet| %>
      <%= link_to pet_path(pet), class: "text-decoration-none" do %>
        <div class="card">
          <% if pet.species == "dog" %>
            <%= image_tag "dog.jpg", alt: "dog" %>
          <% elsif pet.species == "cat" %>
            <%= image_tag "cat.jpg", alt: "cat" %>
          <% elsif pet.species == "dragon" %>
            <%= image_tag "dragon.jpg", alt: "dragon" %>
          <% elsif pet.species == "rabbit" %>
            <%= image_tag "rabbit.jpg", alt: "rabbit" %>
          <% elsif pet.species == "snake" %>
            <%= image_tag "snake.jpg", alt: "snake" %>
          <% else %>
            <%= image_tag "turtle.jpg", alt: "turtle" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= pet.name %></h5>
            <h6 class="card-text"><%= pet.found_days_ago %></h6>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
