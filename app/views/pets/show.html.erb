<div class="card-product">
  <% if @pet.species == "dog" %>
    <%= image_tag "dog.jpg", alt: "dog" %>
  <% elsif @pet.species == "cat" %>
    <%= image_tag "cat.jpg", alt: "cat" %>
  <% elsif @pet.species == "dragon" %>
    <%= image_tag "dragon.jpg", alt: "dragon" %>
  <% elsif @pet.species == "rabbit" %>
    <%= image_tag "rabbit.jpg", alt: "rabbit" %>
  <% elsif @pet.species == "snake" %>
    <%= image_tag "snake.jpg", alt: "snake" %>
  <% else %>
    <%= image_tag "turtle.jpg", alt: "turtle" %>
  <% end %>
  <div class="card-product-infos">
    <h1><%= @pet.name %></h1>
    <h3><%= @pet.species %></h3>
    <h4><%= @pet.found_days_ago %></h4>
    <p><%= @pet.address %></p>
  </div>
</div>

<%= link_to "Edit #{@pet.name}", edit_pet_path(@pet), class: "btn btn-primary" %>
<%= link_to "Delete #{@pet.name}", pet_path(@pet), data: { turbo_method: :delete, turbo_confirm: "Are you sure ?"}, class: "btn btn-danger" %>
<%= link_to "Go Back", pets_path, class: "btn btn-secondary" %>
